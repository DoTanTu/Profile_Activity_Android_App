<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_child"
    android:gravity="center"
    android:orientation="vertical">


    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:textColor="@color/yellow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"
        android:background="@drawable/boder_username_bg"
        android:ems="10"
        android:hint="Đỗ Tấn Từ _ 2050531200324"
        android:inputType="textPersonName"
        android:paddingVertical="20dp"
        android:paddingLeft="20dp" />


    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80px"
        android:layout_marginRight="80px"
        android:background="@drawable/boder_password_bg"
        android:inputType="textPassword"
        android:paddingVertical="20dp"
        android:paddingLeft="20dp"
        android:text="xvxvxcvxcv" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80px"
        android:layout_marginTop="30dp"
        android:layout_marginRight="80px"
        android:text="LOGIN ME"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:text=" Lost password ?"
        android:textSize="15dp" />

</LinearLayout>