<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile_Activity"
    android:background="#c7ecee">

    <LinearLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:background="@color/white"
            android:text="  Back"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="257dp"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/setting"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableRight="@drawable/ic_baseline_settings_24"

            />
    </LinearLayout>

    <ImageView

        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/tab"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="48dp"

        app:srcCompat="@drawable/ic_baseline_perm_contact_calendar_24" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:paddingHorizontal="138dp"
        android:text="Đỗ Tấn Từ"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <LinearLayout
        android:id="@+id/follower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:paddingLeft="20dp"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:text=" 125
              Friend"
            android:textSize="20dp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:text="|     250
            |   Follower"
            android:textSize="20dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/follower"
        android:layout_marginTop="30dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingVertical="20dp"
            android:text="Email : tudo7868@gmail.com"
            android:textSize="20dp"

            android:textStyle="bold" />
        <TextView
            android:paddingVertical="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/phone"
            android:paddingLeft="25dp"
            android:layout_below="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone :0353658943" />
        <TextView
            android:paddingVertical="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/msv"
            android:paddingLeft="25dp"
            android:layout_below="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Skype : dotantu_25062002" />
        <TextView
            android:paddingVertical="20dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:paddingLeft="25dp"
            android:layout_below="@+id/msv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MSV    : 2050531200324" />


    </RelativeLayout>


</RelativeLayout>